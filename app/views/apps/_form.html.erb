<%= form_for(@app, :html => { :multipart => true, :class => "form-horizontal well" }) do |f| %>
  <fieldset>

    <% if @app.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h2>

        <ul>
        <% @app.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :description, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :developer, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :developer, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :application_url, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :application_url, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :image, :class => "control-label" %>
      <div class="controls">
        <%= f.file_field :image, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>

  </fieldset>
<% end %>
